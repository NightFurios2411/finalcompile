<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pratical_Testing_1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorTertiary">@color/black</item>
        <item name="subtitleTextColor">#D3D3D3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/BottomNavStyleDark</item>

    </style>
    <style name="BottomNavStyleDark">
        <item name="itemIconTint">@color/bottom_nav_item_selector_dark</item>
        <item name="itemTextColor">@color/bottom_nav_item_selector_dark</item>
    </style>

    <style name="Theme.Pratical_Testing_1.Dark" parent="Base.Theme.Pratical_Testing_1" />

</resources>